<%- include('../../components/adminHeader.ejs') %>

<div class="container mt-5">
    <h2>Crear Hamburguesa</h2>
    <form method="post" action="/burgers/create" enctype="multipart/form-data">
        <div class="form-group mt-3">
            <label for="name">Nombre de la Hamburguesa</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Nombre de la Hamburguesa" required>
        </div>
        <div class="form-group mt-3">
            <label for="description">Descripción</label>
            <textarea class="form-control" id="description" name="description" rows="3" placeholder="Descripción" required></textarea>
        </div>
        <div class="form-group mt-3">
            <label for="price">Precio</label>
            <input type="number" step="0.01" class="form-control" id="price" name="price" placeholder="Precio" required>
        </div>
        <div class="form-group mt-3">
            <label for="restaurantId">Restaurante</label>
            <select class="form-control" id="restaurantId" name="restaurantId" required>
                <option value="">Seleccione un restaurante</option>
                <% restaurants.forEach(restaurant => { %>
                    <option value="<%= restaurant.id %>"><%= restaurant.name %></option>
                <% }) %>
            </select>
        </div>
        <div class="form-group mt-3">
            <label for="image">Foto</label>
            <input type="file" class="form-control" id="image" name="image" accept="image/*" required>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Crear Hamburguesa</button>
    </form>
</div>

<%- include('../../components/footer.ejs') %>
