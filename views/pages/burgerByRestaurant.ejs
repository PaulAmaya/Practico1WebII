<%- include('../../components/header.ejs') %>

<div class="container mt-5">
  <h2 class="text-center mb-4">Hamburguesas de <%= restaurant.name %></h2>

  <div class="row">
    <% burgers.forEach(burger => { %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow">
          <img src="/images/burgers/<%= burger.id %>.jpg" class="card-img-top" alt="<%= burger.name %>">
          <div class="card-body">
            <h5 class="card-title"><%= burger.name %></h5>
            <a href="/burger/<%= burger.id %>" class="btn btn-outline-primary">Ver detalles</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<%- include('../../components/footer.ejs') %>
