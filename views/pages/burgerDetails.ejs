<%- include('../../components/header.ejs') %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg">
        <img src="/images/burgers/<%= burger.id %>.jpg" class="card-img-top burger-img" alt="<%= burger.name %>">
        <div class="card-body">
          <h2 class="card-title text-center mb-4"><%= burger.name %></h2>
          <p class="card-text"><strong>Descripción:</strong> <%= burger.description %></p>
          <p class="card-text"><strong>Precio:</strong> $<%= burger.price.toFixed(2) %></p>
          <p class="card-text"><strong>Restaurante:</strong> <%= burger.restaurant.name %></p>

          <div class="form-check mt-4">
            <input class="form-check-input" type="checkbox" value="" id="alreadyEaten">
            <label class="form-check-label" for="alreadyEaten">
              ¿Ya comiste esta hamburguesa?
            </label>
          </div>

          <div class="mt-4 d-flex gap-3">
            <button id="likeBtn" class="btn btn-outline-success w-50">👍 Me gustó</button>
            <button id="dislikeBtn" class="btn btn-outline-danger w-50">👎 No me gustó</button>
          </div>

          <a href="/list/<%= burger.restaurant.id %>" class="btn btn-outline-primary mt-4 w-100">
            Ver más hamburguesas de <%= burger.restaurant.name %>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../../components/footer.ejs') %>
