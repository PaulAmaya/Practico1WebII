<%- include('../../components/adminHeader.ejs') %>
<div class="container mt-5">
    <h2>Lista de Restaurantes</h2>
    <a href="/restaurants/create" class="btn btn-success mb-3">Crear nuevo restaurante</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>DirecciÃ³n</th>
                <th>Logo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% restaurants.forEach(restaurant => { %>
                <tr>
                    <td><%= restaurant.name %></td>
                    <td><%= restaurant.address %></td>
                    <td>
                        <% if (restaurant.logo) { %>
                            <img src="/images/restaurants/<%= restaurant.id %>.jpg" alt="<%= restaurant.name %>" style="width: 100px; height: auto;">
                        <% } else { %>
                            No image
                        <% } %>
                    </td>
                    <td>
                        <a href="/restaurants/<%= restaurant.id %>" class="btn btn-warning btn-sm">Editar</a>
                        <form method="post" action="/restaurants/<%= restaurant.id %>/delete" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<%- include('../../components/footer.ejs') %>
